<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="actionBarTitle" parent="Widget.MaterialComponents.TextView" >
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="placeTitleTextView" parent="Widget.MaterialComponents.TextView" >
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="placeSpecsTextView" parent="Widget.MaterialComponents.TextView" >
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
